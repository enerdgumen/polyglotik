{
  "name": "polyglotik",
  "version": "0.0.1",
  "description": "Programming languages for all tastes",
  "main": "index.js",
  "license": "GPL-3.0-only",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc",
    "start": "ts-node src/index.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --write"
  },
  "prettier": {
    "tabWidth": 4
  },
  "dependencies": {
    "dockerode": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.1.0"
  },
  "devDependencies": {
    "@types/dockerode": "^2.5.24",
    "@types/node": "^13.9.0",
    "cz-conventional-changelog": "3.1.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
