{
    "name": "polyglotik",
    "version": "0.0.1",
    "description": "Programming languages for all tastes",
    "main": "main.js",
    "license": "GPL-3.0-only",
    "scripts": {
        "generate": "ts-node scripts/generate.ts",
        "test": "mocha",
        "commit": "git-cz",
        "build": "tsc",
        "start": "ts-node src/main.ts"
    },
    "mocha": {
        "extension": [
            "ts"
        ],
        "spec": "test/**/*.spec.ts",
        "require": [
            "reflect-metadata",
            "ts-node/register"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{json,md,ts}": "prettier --write"
    },
    "prettier": {
        "tabWidth": 4
    },
    "dependencies": {
        "dockerode": "^3.1.0",
        "ora": "^4.0.3",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.1.0"
    },
    "devDependencies": {
        "@types/dockerode": "^2.5.24",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.9.0",
        "@types/ora": "^3.2.0",
        "cz-conventional-changelog": "3.1.0",
        "glob": "^7.1.6",
        "husky": ">=4",
        "lint-staged": ">=10",
        "mocha": "^7.1.1",
        "prettier": "^1.19.1",
        "ts-node": "^8.6.2",
        "typescript": "^3.8.3"
    }
}
